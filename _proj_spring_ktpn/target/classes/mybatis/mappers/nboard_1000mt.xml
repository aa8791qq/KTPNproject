<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="mapper.TB_BR_1000MT">
	
	<select id = "selectnbc" resultType="nboardDTO" >
		select * from TB_BR_1000MT
	</select>
	
	<select id = "selectnbdetail" resultType="nboardDTO" parameterType="int">
		select * from TB_BR_1000MT
		where BRD_NO = #{BRD_NO}
	</select>
	
	<insert id="insertnbc" parameterType = "nboardDTO">
	
	<selectKey keyProperty="BRD_NO" resultType="int" order="BEFORE">
        SELECT SEQ_TB_BR_1000MT.NEXTVAL FROM DUAL
    </selectKey>
    
		INSERT INTO tb_br_1000mt
		VALUES(#{BRD_NO}, #{TTL_NM}, #{BRD_DESC},
		#{BLND_YN}, #{VW_CNT}, #{DLT_YN}, sysdate, sysdate, #{ID} )
		
	</insert>
	
	<update id = "updatenbc" parameterType = "nboardDTO">
		update TB_BR_1000MT
		set ttl_nm = #{TTL_NM}, BRD_DESC = #{BRD_DESC}
<!-- 		mod_dttm = SYSDATE -->
		where brd_no = #{BRD_NO}
	</update>
	
	<delete id = "deletenbc" parameterType = "int">
		DELETE FROM TB_BR_1000MT
  		WHERE BRD_NO = #{BRD_NO}
	</delete>
</mapper>