<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="mapper.TB_BR_1000MT">
	
	<select id = "selectnbc" resultType="nboardDTO" >
		select * from TB_BR_1000MT
	</select>
	
	<select id = "selectnbdetail" resultType="nboardDTO" parameterType="int">
		select * from TB_BR_1000MT
		where BRD_NO = #{BRD_NO}
	</select>
	
	<insert id="insertnbc">
		INSERT INTO tb_br_1000mt
		VALUES(SEQ_TB_BR_1000MT.nextval, #{BRD_SENM}, #{TTL_NM}, #{BRD_DESC},
		#{BLAD_TN}, #{VW_CNT}, #{REG_DTTM}, #{MOD_DTTM}, #{ID} )
	</insert>
	
	<update id = "updatenbc" parameterType = "nboardDTO">
		update TB_BR_1000MT
		set ttl_nm = #{TTL_NM}, BRD_DESC = #{BRD_DESC}
<!-- 		mod_dttm = SYSDATE -->
		where brd_no = #{BRD_NO}
	</update>
	
	<delete id = "deletenbc">
		DELETE FROM TB_BR_1000MT
  		WHERE BRD_NO = #{BRD_NO}
	</delete>
</mapper>